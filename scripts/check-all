#!/bin/bash
set -e

# Find project root (directory containing go.mod)
find_project_root() {
    local current_dir="$PWD"
    while [[ "$current_dir" != "/" ]]; do
        if [[ -f "$current_dir/go.mod" ]]; then
            echo "$current_dir"
            return 0
        fi
        current_dir="$(dirname "$current_dir")"
    done
    echo "Error: Could not find project root (no go.mod found)" >&2
    return 1
}

# Get project root
PROJECT_ROOT=$(find_project_root)
if [[ -z "$PROJECT_ROOT" ]]; then
    exit 1
fi

cd "$PROJECT_ROOT"

echo "ğŸš€ Running all checks..."
echo

# Build everything
echo "ğŸ“¦ Building cc-slack..."
./scripts/build
echo "âœ… Build complete"
echo

# Go static analysis
echo "ğŸ” Running go vet..."
go vet ./...
echo "âœ… go vet passed"
echo

# Go tests
echo "ğŸ§ª Running go tests..."
go test ./...
echo "âœ… All tests passed"
echo

# Clean up dependencies
echo "ğŸ§¹ Tidying go modules..."
go mod tidy
echo "âœ… go.mod is tidy"
echo

# Frontend checks
echo "ğŸ¨ Running frontend checks..."
cd web
pnpm all
echo "âœ… Frontend checks passed"
echo

echo "ğŸ‰ All checks passed!"