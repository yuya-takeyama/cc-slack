# cc-slack Configuration Example
# Copy this file to config.yaml and update with your values

# Server configuration
server:
  port: 8080
  base_url: http://localhost:8080

# Slack configuration
slack:
  bot_token: xoxb-your-bot-token
  signing_secret: your-signing-secret
  # app_token: xapp-your-app-token  # Optional, for Socket Mode
  
  # Assistant display options (optional)
  assistant:
    username: Claude Code
    icon_emoji: ":robot_face:"
    # icon_url: https://example.com/icon.png
  
  # File upload settings
  file_upload:
    enabled: true
    images_dir: ./tmp/uploaded_images
  
  # Message filtering settings
  message_filter:
    enabled: true
    require_mention: true
    # include_patterns: []
    # exclude_patterns: []

# Claude configuration
claude:
  executable: claude
  # default_options: []
  permission_prompt_tool: mcp__cc-slack__approval_prompt

# Database configuration
database:
  path: ./data/cc-slack.db
  migrations_path: ./migrations

# Session configuration
session:
  timeout: 30m
  cleanup_interval: 5m
  resume_window: 1h

# Logging configuration
logging:
  level: info
  format: json
  output: ./logs

# Working directories configuration
working_directories:
  # Default directory if none is selected or configured
  default: .
  
  # List of configured working directories
  configured:
    - name: cc-slack
      path: /Users/yuya/src/github.com/yuya-takeyama/cc-slack
      description: Claude Code Slack integration
    
    - name: my-project
      path: /Users/yuya/src/github.com/yuya-takeyama/my-project
      description: My awesome project
    
    # Add more directories as needed
    # - name: another-project
    #   path: /path/to/another/project
    #   description: Another project description